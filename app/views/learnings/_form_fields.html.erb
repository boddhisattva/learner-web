<% if learning.errors.any? %>
<div class="notification is-danger is-light">
  <h2 class="subtitle">
    <%= pluralize(learning.errors.count, "error") %> prohibited this learning from being saved:
  </h2>
  <ul class="ml-4">
    <% learning.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field mb-4">
  <%= f.label :lesson, class: "label" %>
  <div class="control">
    <%= f.text_field :lesson, class: "input", placeholder: "Enter learning name" %>
  </div>
</div>

<div class="field mb-4">
  <%= f.label :description, class: "label" %>
  <div class="control">
    <%= f.text_area :description, class: "textarea", placeholder: "Enter learning description", rows: 5 %>
  </div>
</div>

<div class="field mb-4">
  <%= f.label :organization_id, "Organization", class: "label" %>
  <div class="control">
    <%= f.hidden_field :organization_id, value: current_organization.id %>
    <%= text_field_tag :organization_name, current_organization.name, class: "input", disabled: true, readonly: true %>
  </div>
</div>

<div class="field mb-4">
  <%= f.label :visibility, "Visibility", class: "label mb-3" %>
  <div class="control">
    <div class="field">
      <label class="radio">
        <%= f.radio_button :visibility, :personal, checked: learning.visibility == 'personal' %>
        <span class="ml-2">
          <span class="icon-text">
            <span class="icon has-text-warning">
              <i class="fas fa-lock"></i>
            </span>
            <span><strong>Personal</strong> - Only visible to you</span>
          </span>
        </span>
      </label>
    </div>
    <div class="field">
      <label class="radio">
        <%= f.radio_button :visibility, :organization, checked: learning.visibility == 'organization' %>
        <span class="ml-2">
          <span class="icon-text">
            <span class="icon has-text-info">
              <i class="fas fa-building"></i>
            </span>
            <span><strong>Organization</strong> - Visible to all members of <%= current_organization.name %></span>
          </span>
        </span>
      </label>
    </div>
    <div class="field">
      <label class="radio">
        <%= f.radio_button :visibility, :open, checked: learning.visibility == 'open' %>
        <span class="ml-2">
          <span class="icon-text">
            <span class="icon has-text-success">
              <i class="fas fa-globe"></i>
            </span>
            <span><strong>Open</strong> - Publicly visible to everyone(outside of one's organization too)</span>
          </span>
        </span>
      </label>
    </div>
  </div>
</div>

<div class="field mb-5">
  <%= f.label "Learning Categories", class: "label mb-3" %>
  <div class="control">
    <div class="columns is-multiline is-mobile">
      <% learning_categories.each do |category| %>
      <div class="column is-half-mobile is-one-third-tablet">
        <label class="checkbox">
          <%= check_box_tag "learning[category_ids][]", category.id, learning.category_ids.include?(category.id), id: "learning_category_#{category.id}" %>
          <span class="ml-2"><%= category.name %></span>
        </label>
      </div>
      <% end %>
    </div>
  </div>
</div>
