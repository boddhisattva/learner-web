<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8-desktop is-11-tablet is-12-mobile">
        <div class="box p-5">
          <h1 class="title has-text-centered mb-5">Create New Learning</h1>
          <%= form_with(model: @learning, data: { turbo: false }) do |f| %>
            <%= render 'form_fields', f: f, learning: @learning, learning_categories: @learning_categories %>

            <div class="field is-grouped is-grouped-centered mt-5">
                  <div class="control">
                    <%= f.submit "Create Learning" , class: "button is-primary is-medium px-5" %>
                  </div>
                  <div class="control">
                    <%= link_to "Cancel" , learnings_path, class: "button is-light is-medium" %>
                  </div>
                </div>
                <% end %>
        </div>

        <%= render 'back_to_learnings_link' %>
      </div>
    </div>
  </div>
</section>
