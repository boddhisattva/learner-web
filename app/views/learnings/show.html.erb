<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
        <nav class="breadcrumb" aria-label="breadcrumbs">
          <ul>
            <li>
              <%= link_to "Learnings" , learnings_path %>
            </li>
            <li class="is-active"><a href="#" aria-current="page">
                <%= @learning.lesson %>
              </a></li>
          </ul>
        </nav>

        <div class="box">
          <div class="level">
            <div class="level-left">
              <div class="level-item">
                <h1 class="title">
                  <%= @learning.lesson %>
                </h1>
              </div>
            </div>
            <div class="level-right">
              <div class="level-item">
                <div class="buttons">
                  <span class="button <%= @learning.public_visibility ? 'is-success' : 'is-warning' %>" style="pointer-events: none;">
                    <span class="icon">
                      <i class="fas <%= @learning.public_visibility ? 'fa-globe' : 'fa-lock' %>"></i>
                    </span>
                    <span>
                      <%= @learning.public_visibility ? 'Public' : 'Private' %>
                    </span>
                  </span>
                </div>
              </div>
              <!-- TODO: add permissions later when needed around edit -->
              <div class="level-item">
                <div class="buttons">
                  <%= link_to edit_learning_path(@learning), class: "button is-info" do %>
                  <span class="icon">
                    <i class="fas fa-edit"></i>
                  </span>
                  <span>Edit</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="columns is-multiline mt-4">
            <div class="column is-12">
              <div class="content">
                <div class="message is-info">
                  <div class="message-header">
                    <p>Learning Description</p>
                  </div>
                  <div class="message-body">
                    <%= simple_format @learning.description %>
                  </div>
                </div>
              </div>
            </div>

            <div class="column is-6">
              <div class="panel" style="height: 100%;">
                <div class="panel-heading">
                  Categories
                </div>
                <div class="panel-block" style="min-height: 3rem;">
                  <div class="tags">
                    <% if @learning.learning_categories.any? %>
                    <% @learning.learning_categories.each do |category| %>
                    <span class="tag is-medium is-primary">
                      <%= category.name %>
                    </span>
                    <% end %>
                    <% else %>
                    <span class="has-text-grey">No categories assigned</span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <div class="column is-6">
              <div class="panel" style="height: 100%;">
                <div class="panel-heading">
                  Organization Details
                </div>
                <div class="panel-block" style="min-height: 3rem;">
                  <div class="content">
                    <p class="mb-0">
                      <strong>Organization:</strong>
                      <%= @learning.organization.name %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="columns is-multiline">
            <div class="column is-12">
              <div class="box has-background-light">
                <h6 class="title is-6 mb-3">Audit Information</h6>
                <div class="columns is-multiline is-mobile">
                  <div class="column is-6-tablet is-12-mobile">
                    <p class="is-size-7">
                      <span class="icon-text">
                        <span class="icon">
                          <i class="fas fa-user-plus"></i>
                        </span>
                        <span><strong>Created by:</strong> <%= @learning.creator.name %></span>
                      </span>
                    </p>
                    <p class="is-size-7">
                      <span class="icon-text">
                        <span class="icon">
                          <i class="fas fa-calendar"></i>
                        </span>
                        <span><strong>Created at:</strong> <%= @learning.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
                      </span>
                    </p>
                  </div>
                  <div class="column is-6-tablet is-12-mobile">
                    <p class="is-size-7">
                      <span class="icon-text">
                        <span class="icon">
                          <i class="fas fa-user-edit"></i>
                        </span>
                        <span><strong>Last modified by:</strong> <%= @learning.last_modifier.name %></span>
                      </span>
                    </p>
                    <p class="is-size-7">
                      <span class="icon-text">
                        <span class="icon">
                          <i class="fas fa-calendar-check"></i>
                        </span>
                        <span><strong>Last updated:</strong> <%= @learning.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
                      </span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="has-text-centered mt-4">
          <div class="buttons is-centered">
            <%= link_to learnings_path, class: "button is-light" do %>
            <span class="icon">
              <i class="fas fa-arrow-left"></i>
            </span>
            <span>Back to Learnings</span>
            <% end %>

            <!-- TODO: add permissions later when needed around edit -->
            <%= link_to learning_path(@learning, format: :html), method: :delete, data: {
              confirm: "Are you sure you want to delete this learning?", turbo_method: :delete }, class: "button is-danger" do %>
            <span class="icon">
              <i class="fas fa-trash"></i>
            </span>
            <span>Delete Learning</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
